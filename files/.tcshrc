limit coredumpsize 0

setenv EDITOR	"emacs -nw"
setenv PAGER	"${HOME}/.dotfiles/submodules/vimpager/vimpager"

set autolist
set complete
set history=1000
set path=(/usr/{sbin,bin} /{sbin,bin})
set prompt='%%%n@%M %h:'
set savehist=1000
set watch=(1 any any)

alias ll	'ls -l'
alias la	'ls -a'
alias l		'clear ; ll -a'
alias j		'jobs'
alias :q	'exit'
alias vi	'vim -O2'
alias ne	'emacs -nw'
alias vcat	"${HOME}/.dotfiles/submodules/vimpager/vimcat"
alias vpa	"${HOME}/.dotfiles/submodules/vimpager/vimpager"

bindkey '^[[1;5D'	backward-word
bindkey '^[[1;5C'	forward-word
##bindkey '^H'		backward-delete-word
##bindkey '^[[1;5A'	backward-word
##bindkey '^[[1;5B'	backward-word
##bindkey '5~'		delete-word

alias 7up	'svn up'

set FILE_SPEC="$HOME/.tcshrc_sp"
if ( -f $FILE_SPEC ) then
  source $FILE_SPEC
endif

# EOF
